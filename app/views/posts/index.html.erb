<center>
<div class="container">
<% if !flash[:notice].blank? %>
<div>
	<%= flash[:notice] %>
</div>
<% end %>	
</div>




<table border="1">
	<thead>
		<tr>
		    
			<th>candidate Email</th>
			<th>Download link</th>
			<th>Posted_at</th>
			<% if user_signed_in? %>
			<th>Action</th>
			<% end %>
			
		</tr>
	</thead>
			<tbody>
			<% @post.each do |p| %>
			<tr>
			
			<td><%= p.user.email %></td>
			<td><%= link_to 'Download', p.attachment_url %></td>
			<td><%= time_ago_in_words(p.created_at) %> ago</td>
			<% if user_signed_in? %>
			<td><%=  link_to 'Delete', p, method: :delete, confirm: "Are you sure to delete #{p.name}?" %></td>
			<% end %>
			</tr>
			</tbody>
			<% end %>
		</tbody>
		

		<br>
		
	</table>
	</nav>
	<h4><%= link_to "New Post",new_post_path %> </h4> 
	<br>
	<% if user_signed_in? %>
	<h4><%= link_to('Logout', destroy_user_session_path, :method => :delete)  %></h4>
	<% end %>
	<br>
	<h4><%= link_to 'Signup', new_user_registration_path %></h4>
	<br>
	<h4><%= link_to 'Login', user_session_path %></h4>
	
	</center>
